# Docker environment file
# Copy this to .env and update with your actual values

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (automatically configured for Docker)
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=jobcoach
MYSQL_PASSWORD=jobcoach123
MYSQL_DATABASE=job_coach

# Redis Configuration (automatically configured for Docker)
REDIS_HOST=redis
REDIS_PORT=6379
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ChromaDB Configuration (automatically configured for Docker)
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_PERSIST_DIRECTORY=/app/chroma

# External Port Mappings (for connecting from host)
# MySQL: localhost:3307 -> container:3306
# Redis: localhost:6380 -> container:6379  
# ChromaDB: localhost:8001 -> container:8000
# App: localhost:8000 -> container:8000

# Application Configuration
DEBUG=true
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000